<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:padding="10dp"
    android:gravity="center_vertical"
    android:layout_height="116dp">

    <com.ehealthkiosk.kiosk.widgets.VerticalTextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:textSize="16sp"
        android:id="@+id/appointment_id"
        android:lines="1"
        android:maxLines="1"
        android:textColor="#e0dada"
        android:paddingLeft="21dp"
        android:gravity="bottom"
        android:text="QWREDT" />
    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="25dp"
        android:id="@+id/profile_image"
        android:src="@drawable/bg_female"
        android:background="@drawable/circular_image"

        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingLeft="25dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="21sp"
                android:textColor="#707070"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_regular"
                android:id="@+id/doctor_name"
                android:text="Dr. Kamlesh"/>
                <View
                    android:background="@drawable/available"
                    android:layout_width="20dp"
                    android:id="@+id/doc_status"
                    android:layout_marginLeft="10dp"
                    android:layout_height="20dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:textColor="#a3a3a3"
                android:fontFamily="@font/poppins_regular"
                android:id="@+id/doctor_description"
                android:layout_height="wrap_content"
                android:text="Gynecologist"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#0049ee"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_regular"
                android:id="@+id/see_profile"
                android:text="SEE PROFILE"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:id="@+id/status"
        android:textStyle="bold"
        android:textAlignment="textStart"
        android:layout_weight="1"
        android:fontFamily="@font/poppins_regular"
        android:textColor="#707070"
        android:text="7th Appointment"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_regular"
                android:textStyle="bold"
                android:textColor="#707070"
                android:id="@+id/datetime"
                android:text="5.00 PM, 14/03/2020"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:id="@+id/patient_name"
                android:textColor="#525252"
                android:fontFamily="@font/poppins_regular"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="For Mukesh Kumar"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:id="@+id/see_details"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        android:layout_width="180dp"
        app:cornerRadius="0dp"
        android:visibility="visible"
        android:textSize="16sp"
        android:layout_height="match_parent"
        android:textColor="@color/colorPrimary"
        android:text="SEE DETAILS"
        app:strokeColor="@color/colorPrimary"
        />
    <Button
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:id="@+id/reschedule"
        android:paddingLeft="22dp"
        android:visibility="gone"
        android:paddingRight="22sp"
        android:layout_width="180dp"
        app:cornerRadius="0dp"
        android:textSize="16sp"
        android:layout_height="match_parent"
        android:textColor="@color/consult_button_red"
        android:text="RESCHEDULE"
        app:strokeColor="@color/consult_button_red"
        />
    <Button
        android:id="@+id/join_now"
        android:paddingLeft="22dp"
        android:visibility="gone"
        android:background="@color/colorPrimary"
        android:paddingRight="22sp"
        android:layout_width="180dp"
        android:backgroundTint="@color/colorPrimary"
        app:cornerRadius="0dp"
        android:textSize="16sp"
        android:layout_height="match_parent"
        android:textColor="@color/white"
        android:text="Join Now"
        app:strokeColor="@color/white"
        />
</LinearLayout>