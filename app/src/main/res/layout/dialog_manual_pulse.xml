<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">


    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        android:layout_margin="20dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_your_pulse_and_sp02_sats"
            android:textColor="@color/textColorLightPrimary"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textSize="28sp"
            android:fontFamily="sans-serif-medium"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Pulse"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:visibility="visible"
                android:padding="10dp"/>

            <EditText
                android:id="@+id/et_pulse"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:inputType="number"
                android:padding="10dp"
                android:imeOptions="actionDone"
                android:textSize="20sp" />

            <TextView android:id="@+id/tv_pulse"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="In BPM"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:padding="10dp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="SpO2"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:visibility="visible"
                android:padding="10dp"/>

            <EditText
                android:id="@+id/et_sats"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:inputType="number"
                android:padding="10dp"
                android:imeOptions="actionDone"
                android:textSize="20sp" />

            <TextView android:id="@+id/tv_sats"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="In %"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:padding="10dp"/>


        </LinearLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_enter"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:padding="10dp"
            style="@style/Widget.MaterialComponents.Button"
            app:rippleColor="@color/black_semi_transparent"
            android:backgroundTint="@color/colorSecondary"
            android:text="@string/submit"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="50dp"
            android:textColor="@color/white"
            android:shadowColor="@color/colorPrimaryLight"
            android:visibility="visible"/>

    </LinearLayout>

</LinearLayout>