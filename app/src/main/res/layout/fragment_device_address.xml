<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.DeviceAddressFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/container_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/device_one_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/device_one_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:layout_weight=".7"
                    android:text="@string/pulse"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight=".3"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <Spinner
                        android:layout_width="wrap_content"
                        android:id="@+id/pulse_spinner"
                        android:layout_weight="1"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/spinner_bg"
                        android:layout_height="55dp"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/device_one_inp_layout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="wrap_content"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:hint="@string/device_address"
                        android:imeOptions="actionDone">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/device_one_inp_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:textColor="@color/colorPrimary" />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/device_2_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/device_2_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:layout_weight=".7"
                    android:text="@string/temperature"
                    android:textSize="20sp" />


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/device_2_inp_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/device_address"
                    android:layout_weight=".3"
                    android:imeOptions="actionDone">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/device_2_inp_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimary" />

                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/device_3_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/device_3_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:layout_weight=".7"
                    android:text="@string/blood_pressure"
                    android:textSize="20sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight=".3"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <Spinner
                        android:layout_width="wrap_content"
                        android:id="@+id/bp_spinner"
                        android:layout_weight="1"
                        android:background="@drawable/spinner_bg"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="2dp"
                        android:layout_height="55dp"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/device_3_inp_layout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="wrap_content"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:hint="@string/device_address"
                        android:imeOptions="actionDone">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/device_3_inp_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:textColor="@color/colorPrimary" />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/device_4_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/device_4_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:layout_weight=".7"
                    android:text="@string/weight_machine"
                    android:textSize="20sp" />


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/device_4_inp_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:hint="@string/device_address"
                    android:imeOptions="actionDone">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/device_4_inp_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimary" />

                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/device_5_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/device_5_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:layout_weight=".7"
                    android:text="@string/height_machine"
                    android:textSize="20sp" />


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/device_5_inp_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:hint="@string/device_address"
                    android:imeOptions="actionDone">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/device_5_inp_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimary" />

                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/device_6_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/device_6_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:layout_weight=".7"
                    android:text="@string/glucose"
                    android:textSize="20sp" />


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/device_6_inp_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:hint="@string/device_address"
                    android:imeOptions="actionDone">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/device_6_inp_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimary" />

                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>
        </LinearLayout>

            <LinearLayout
                android:id="@+id/print_url_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/print_url_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:layout_weight=".6"
                    android:text="@string/print_url"
                    android:textSize="20sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/print_url_inp_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:hint="@string/print_url"
                    android:imeOptions="actionDone">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/print_url_inp_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimary" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/device_7_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/device_7_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:layout_weight=".6"
                    android:text="@string/height_default_calibration_metres"
                    android:textSize="20sp" />
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight=".4"
                   android:focusableInTouchMode="true"
                   android:orientation="horizontal">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/device_7_inp_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/default_height_2"
                    android:paddingEnd="20dp"
                    android:layout_weight=".2"
                    android:imeOptions="actionDone">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/device_7_inp_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimary" />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/measure_height"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:backgroundTint="@color/colorSecondary"
                    android:textColor="@color/white"
                    android:shadowColor="@color/colorSecondary"
                    android:text="@string/measure"
                    android:textSize="11sp"/>
               </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/check_one_for_printer_settings"
                    android:layout_weight="0.6"
                    android:textSize="20sp"
                    android:layout_margin="10dp" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight=".4">

                    <RadioButton
                        android:id="@+id/is_wifi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/wifi_printer"
                        android:layout_marginEnd="10dp"
                        android:layout_weight=".5"
                        android:textSize="16sp"
                        android:textColor="@color/grey_700" />


                    <RadioButton
                        android:id="@+id/is_raspberry_pi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/raspberry_pi"
                        android:textSize="16sp"
                        android:layout_weight=".5"
                        android:buttonTint="@color/colorSecondary"
                        android:textColor="@color/grey_700"
                        android:checked="true" />

                </RadioGroup>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/sync_button"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="2"
                    android:backgroundTint="@color/colorPrimary"
                    android:padding="10dp"
                    android:shadowColor="@color/colorPrimaryLight"
                    android:text="@string/sync"
                    app:rippleColor="@color/black_semi_transparent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/device_settings_save"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="2"
                    android:backgroundTint="@color/colorSecondary"
                    android:padding="10dp"
                    android:shadowColor="@color/colorPrimaryLight"
                    android:text="@string/submit"
                    app:rippleColor="@color/black_semi_transparent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/update_btn"
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:layout_weight="2"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    style="@style/Widget.MaterialComponents.Button"
                    app:rippleColor="@color/black_semi_transparent"
                    android:backgroundTintMode="@color/colorPrimary"
                    app:strokeColor="@color/colorPrimary"
                    android:text="@string/update_app"
                    android:textStyle="bold"
                    android:visibility="visible"
                    android:textColor="@color/white">

                </com.google.android.material.button.MaterialButton>


            </LinearLayout>



        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/access_denied_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/error_image"
            android:layout_width="327dp"
            android:layout_height="359dp"
            android:layout_gravity="center"
            android:layout_marginStart="100dp"
            android:src="@drawable/retry" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="visible">


        <TextView
            android:id="@+id/access_denied_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:text="@string/this_page_can_only_be_accessed_by_the_admin"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/retry_password"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:shadowColor="@color/colorPrimaryLight"
            android:text="@string/retry"
            android:textSize="16sp"
            app:rippleColor="@color/black_semi_transparent" />

    </LinearLayout>
    </LinearLayout>
</RelativeLayout>