<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/appBg"
    android:orientation="vertical">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/consult_doctor"

            android:fontFamily="@font/my_font_family"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:id="@+id/toolbar_title"
            android:textSize="20sp" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <com.shuhart.stepview.StepView
            android:id="@+id/step_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            app:sv_selectedCircleColor="@color/colorAccent"
            app:sv_selectedTextColor="@color/colorAccent"
            app:sv_stepLineWidth="1dp"
            app:sv_typeface="@font/poppins_regular"
            app:sv_stepPadding="4dp"
            app:sv_nextStepCircleColor="@color/grey_700"
            app:sv_nextTextColor="@color/grey_700"
            app:sv_nextStepLineColor="@color/grey_700"
            app:sv_doneCircleColor="@color/colorSecondary"
            app:sv_doneStepLineColor="@color/colorSecondary"
            app:sv_doneCircleRadius="20dp"
            app:sv_selectedCircleRadius="20dp"
            app:sv_selectedStepNumberColor="@color/white"
            app:sv_stepViewStyle="@style/StepView"
            app:sv_doneStepMarkColor="@color/white"
            app:sv_doneTextColor="@color/colorSecondary"
            app:sv_stepNumberTextSize="20sp"
            app:sv_animationType="None"
            app:sv_textSize="20sp"/>


        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>


</LinearLayout>