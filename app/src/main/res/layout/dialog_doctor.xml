<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="1000dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="24dp"
    android:layout_height="wrap_content">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:text="Doctor Profile"
                    android:textStyle="bold"
                    android:textSize="21sp"
                    android:textColor="#0049ee"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="X"
                    android:id="@+id/close"
                    android:textSize="25sp"
                    android:textColor="#0049ee"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="25px"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="88dp"
                    android:layout_marginRight="21dp"
                    android:id="@+id/profile_image"
                    android:layout_height="88dp"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/name"
                        android:textSize="21sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="Dr. Pranav Tiwari"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/description"
                        android:textSize="18sp"
                        android:textColor="#a3a3a3"
                        android:textStyle="bold"
                        android:text="Gynecologist"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/reg_number"
                        android:textSize="18sp"
                        android:textColor="#003cc4"
                        android:text="Gynecologist"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:gravity="end"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="â‚¹ 230.00 "
                        android:textStyle="bold"
                        android:id="@+id/fees"
                        android:textSize="28sp"
                        android:textColor="#141414"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="per consultation"
                        android:textColor="#141414"
                        android:textSize="28sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="25dp"
                android:background="#50707070"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="18px"
                    android:textColor="#696969"
                    android:text="Qualifications:"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="18px"
                    android:textColor="#696969"
                    android:text="Experience:"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="18px"
                    android:visibility="invisible"
                    android:textColor="#696969"
                    android:text="Languages known:"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="12dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="18px"
                    android:id="@+id/qualifications"
                    android:textColor="#141414"
                    android:text="MBBS (Gold Medalist)"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="18px"
                    android:textColor="#141414"
                    android:text="17yrs"
                    android:id="@+id/experience"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:visibility="invisible"
                    android:textSize="18px"
                    android:textColor="#141414"
                    android:id="@+id/languages"
                    android:text="Hindi, English, Nepali"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="25dp"
                android:background="#50707070"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="18px"
                    android:textColor="#696969"
                    android:text="Expertise:"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="12dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="18px"
                    android:id="@+id/expertise"
                    android:textColor="#141414"
                    android:text="Lorem Ipsum. Sum Sum"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="25dp"
                android:background="#50707070"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="18px"
                    android:visibility="invisible"
                    android:textColor="#696969"
                    android:text="Clinic:"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="12dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:id="@+id/address"
                    android:textSize="18px"
                    android:visibility="invisible"
                    android:textColor="#141414"
                    android:text="Sarvodaya Medical Institute, Aarey Road, Mumbai"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="end"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/next"
                    android:layout_width="121dp"
                    app:cornerRadius="0dp"
                    android:textSize="16sp"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_height="69dp"
                    android:layoutDirection="rtl"
                    android:textColor="@color/white"
                    android:text="NEXT"
                    />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>