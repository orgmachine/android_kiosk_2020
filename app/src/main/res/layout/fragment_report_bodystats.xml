<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollViewMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_height"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="HEIGHT"
                    android:textAlignment="textStart"
                    android:textColor="@color/textColorDarkPrimary"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_weight"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="WEIGHT"
                    android:textAlignment="textStart"
                    android:textColor="@color/textColorDarkPrimary"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_bmi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="BMI"
                    android:textAlignment="textStart"
                    android:textColor="@color/textColorDarkPrimary"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_hydration"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="HYDRATION"
                    android:textAlignment="textStart"
                    android:textColor="@color/textColorDarkPrimary"
                    android:textSize="18sp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_fat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="FAT"
                    android:textAlignment="textStart"
                    android:textColor="@color/textColorDarkPrimary"
                    android:textSize="18sp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_bonemass"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="BONEMASS"
                    android:textAlignment="textStart"
                    android:textColor="@color/textColorDarkPrimary"
                    android:textSize="18sp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_muscle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="MUSCLE"
                    android:textAlignment="textStart"
                    android:textColor="@color/textColorDarkPrimary"
                    android:textSize="18sp"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_height_value"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_weight="1"
                    android:gravity="center_vertical"

                    android:textAlignment="textEnd"
                    android:textColor="@color/textColorDarkPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_weight_value"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_weight="1"
                    android:gravity="center_vertical"

                    android:textAlignment="textEnd"
                    android:textColor="@color/textColorDarkPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_bmi_value"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="24.85 Kg/m2"
                    android:textAlignment="textEnd"
                    android:textColor="@color/textColorDarkPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_hydration_value"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="56.51%"
                    android:textAlignment="textEnd"
                    android:textColor="@color/textColorDarkPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_fat_value"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="20%"
                    android:textAlignment="textEnd"
                    android:textColor="@color/textColorDarkPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_bonemass_value"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="4.36%"
                    android:textAlignment="textEnd"
                    android:textColor="@color/textColorDarkPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_muscle_value"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="40.83%"
                    android:textAlignment="textEnd"
                    android:textColor="@color/textColorDarkPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:id="@+id/tv_height_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text=""
                    android:visibility="invisible"
                    android:textAlignment="center"
                    android:textColor="@color/textColorLightPrimary"
                    android:textSize="18sp"
                    android:layout_margin="10dp"/>

                <TextView
                    android:id="@+id/tv_weight_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text=""
                    android:visibility="invisible"
                    android:textAlignment="center"
                    android:textColor="@color/textColorLightPrimary"
                    android:textSize="18sp"
                    android:layout_margin="10dp"/>

                <TextView
                    android:id="@+id/tv_bmi_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Obese"
                    android:textAlignment="center"
                    android:textColor="@color/textColorLightPrimary"
                    android:textSize="18sp"
                    android:layout_margin="10dp"/>

                <TextView
                    android:id="@+id/tv_hydration_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Good"
                    android:textAlignment="center"
                    android:textColor="@color/textColorLightPrimary"
                    android:textSize="18sp"
                    android:layout_margin="10dp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_fat_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Overweight"
                    android:textAlignment="center"
                    android:textColor="@color/textColorLightPrimary"
                    android:textSize="18sp"
                    android:layout_margin="10dp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_bonemass_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Normal"
                    android:textAlignment="center"
                    android:textColor="@color/textColorLightPrimary"
                    android:textSize="18sp"
                    android:layout_margin="10dp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_muscle_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Good"
                    android:textAlignment="center"
                    android:textColor="@color/textColorLightPrimary"
                    android:textSize="18sp"
                    android:layout_margin="10dp"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:gravity="left"
                android:visibility="gone"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/img_height"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:visibility="invisible"
                    android:background="@color/white"
                    android:src="@drawable/info" />

                <ImageButton
                    android:id="@+id/img_weight"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:visibility="invisible"
                    android:background="@color/white"
                    android:src="@drawable/info" />

                <ImageButton
                    android:id="@+id/img_bmi"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:src="@drawable/info" />

                <ImageButton
                    android:id="@+id/img_hydration"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:src="@drawable/info"
                    android:visibility="gone"/>

                <ImageButton
                    android:id="@+id/img_fat"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:src="@drawable/info"
                    android:visibility="gone"/>

                <ImageButton
                    android:id="@+id/img_bonemass"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:src="@drawable/info"
                    android:visibility="gone"/>

                <ImageButton
                    android:id="@+id/img_muscle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:src="@drawable/info"
                    android:visibility="gone"/>
            </LinearLayout>


        </LinearLayout>


    </ScrollView>
</LinearLayout>